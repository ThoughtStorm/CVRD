<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Condition_Due_Date</fullName>
    <active>true</active>
    <description>Due date should be in past</description>
    <errorConditionFormula>AND(
NOT(ISBLANK( CVRD_DS_Due_Date__c )),
TODAY() &gt; CVRD_DS_Due_Date__c 
)</errorConditionFormula>
    <errorDisplayField>CVRD_DS_Due_Date__c</errorDisplayField>
    <errorMessage>You cannot select a past date.</errorMessage>
</ValidationRule>
