<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Completed_Approval</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>sahana.ky+cvrd@thoughtstorm.ca</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>DM Approval</label>
        <name>DM_Approval</name>
        <rejectionActions>
            <action>
                <name>CVRD_DS_Update_application_Phase</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_the_Phase_to_Issue</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_the_Status_to_Pending</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>yogesh.digambar+cvrd@thoughtstorm.ca</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>MUSW__Application2__c.MUSW__Type2__c</field>
                <operation>notEqual</operation>
                <value>Subdivision_Referral,Crown_Land_Referrals</value>
            </criteriaItems>
        </entryCriteria>
        <label>GM Approval</label>
        <name>GM_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Update_the_Status_to_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND ( ( 5 OR 6 ) OR 7)</booleanFilter>
        <criteriaItems>
            <field>MUSW__Application2__c.MUSW__Phase__c</field>
            <operation>equals</operation>
            <value>Approval</value>
        </criteriaItems>
        <criteriaItems>
            <field>MUSW__Application2__c.MUSW__Status__c</field>
            <operation>equals</operation>
            <value>Pending</value>
        </criteriaItems>
        <criteriaItems>
            <field>MUSW__Application2__c.RecordType</field>
            <operation>notEqual</operation>
            <value>Crown Land Referrals</value>
        </criteriaItems>
        <criteriaItems>
            <field>MUSW__Application2__c.RecordType</field>
            <operation>notEqual</operation>
            <value>Subdivision (Referral)</value>
        </criteriaItems>
        <criteriaItems>
            <field>MUSW__Application2__c.CVRD_DS_Sub_Type__c</field>
            <operation>equals</operation>
            <value>Cannabis Licence Referrals,Delegated,Environmental and Hazard,Amendment/Extension,Conservation/GHG reduction,Form and Character,Agricultural,Registration Amendment or Discharge</value>
        </criteriaItems>
        <criteriaItems>
            <field>MUSW__Application2__c.CVRD_DS_Sub_Type__c</field>
            <operation>equals</operation>
            <value>Form and Character - Signs,Discharge,Minor - New,Minor - Extension</value>
        </criteriaItems>
        <criteriaItems>
            <field>MUSW__Application2__c.MUSW__Type2__c</field>
            <operation>equals</operation>
            <value>Board_of_Variance,Development_Permit</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>CVRD DS Application General Manager</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
